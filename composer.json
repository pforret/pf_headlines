{
    "name": "pforret/pf_headlines",
    "description": "detect popular word groups in a collection of headlines/articles titles",
    "type": "library",
    "authors": [
        {
            "name": "Peter Forret",
            "email": "peter@forret.com"
        }
    ],
    "license": "GNU",
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.0",
        "ext-mbstring": "*",
        "doctrine/inflector": "^2.0@dev",
        "vria/nodiacritic": "dev-master",
        "voku/stop-words": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "8"
    },
    "autoload": {
        "psr-4": {
            "pforret\\pf_headlines\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
